<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="parserColorBackground.SplashPage"
             BackgroundColor="#2196F3">

    <Grid>
        <Image 
            x:Name="SplashImage"
            Aspect="AspectFill"
            Opacity="0"/>

        <VerticalStackLayout 
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Spacing="20">

            <Label 
                x:Name="AppNameLabel"
                Text="Color Background Parser"
                FontSize="32"
                FontAttributes="Bold"
                TextColor="White"
                HorizontalOptions="Center"
                Opacity="0"/>

            <ActivityIndicator 
                x:Name="LoadingIndicator"
                IsRunning="True"
                Color="White"
                WidthRequest="50"
                HeightRequest="50"
                Opacity="0"/>

            <Label 
                x:Name="LoadingLabel"
                Text="Загрузка..."
                FontSize="18"
                TextColor="White"
                HorizontalOptions="Center"
                Opacity="0"/>
        </VerticalStackLayout>
    </Grid>

</ContentPage>